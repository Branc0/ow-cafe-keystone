datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Coffee {
  id         String    @id @default(cuid())
  aroma      String    @default("")
  taste      String    @default("")
  body       String    @default("")
  afterTaste String    @default("")
  roast      String    @default("")
  variety    String    @default("")
  process    String    @default("")
  producer   Producer? @relation("Coffee_producer", fields: [producerId], references: [id])
  producerId String?   @map("producer")

  @@index([producerId])
}

model Producer {
  id          String   @id @default(cuid())
  name        String   @default("")
  farm        String   @default("")
  county      String   @default("")
  microregion String   @default("")
  altitude    String   @default("")
  coffees     Coffee[] @relation("Coffee_producer")
}